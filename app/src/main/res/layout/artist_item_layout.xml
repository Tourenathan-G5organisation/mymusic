<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/artist_image"
        android:layout_width="@dimen/artist_list_image_size"
        android:layout_height="@dimen/artist_list_image_size"
        android:contentDescription="@string/artist_image"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/album" />

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/artist_list_name_margin"
        android:text="Artist Name"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/album_item_text_size" />
</LinearLayout>